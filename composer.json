{
    "name": "slam/composer-folders-plugin",
    "description": "Create and clean specified folders",
    "license": "MIT",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "ext-posix": "*",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.5.4",
        "phpstan/phpstan": "^1.10.1",
        "phpstan/phpstan-deprecation-rules": "^1.1.2",
        "phpstan/phpstan-phpunit": "^1.3.7",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^10.0.11",
        "slam/php-cs-fixer-extensions": "^3.4.0",
        "symfony/filesystem": "^6.2.5"
    },
    "autoload": {
        "psr-4": {
            "Slam\\Composer\\Folders\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlamTest\\Composer\\Folders\\": "tests/"
        }
    },
    "extra": {
        "class": "Slam\\Composer\\Folders\\FoldersPlugin"
    }
}
