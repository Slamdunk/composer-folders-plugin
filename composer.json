{
    "name": "slam/composer-folders-plugin",
    "description": "Create and clean specified folders",
    "license": "MIT",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.3.0 || ~8.4.0",
        "ext-posix": "*",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.8.2",
        "phpstan/phpstan": "^1.12.9",
        "phpstan/phpstan-deprecation-rules": "^1.2.1",
        "phpstan/phpstan-phpunit": "^1.4.0",
        "phpstan/phpstan-strict-rules": "^1.6.1",
        "phpunit/phpunit": "^11.4.3",
        "slam/php-cs-fixer-extensions": "^3.12.0",
        "symfony/filesystem": "^7.1.6"
    },
    "autoload": {
        "psr-4": {
            "Slam\\Composer\\Folders\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlamTest\\Composer\\Folders\\": "tests/"
        }
    },
    "extra": {
        "class": "Slam\\Composer\\Folders\\FoldersPlugin"
    }
}
